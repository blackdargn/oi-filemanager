<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <org.openintents.filemanager.view.PathBar
	        android:id="@+id/pathbar"
	        android:background="?com.dm.oifilemgr:attr/pathBarBackground"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/topBar_height" >
	    </org.openintents.filemanager.view.PathBar>
	    <include layout="@layout/filelist"/>
	</LinearLayout>
    <ImageView
        android:id="@+id/btn_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/action_container"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/ic_navbar_home"/>
    <org.openintents.filemanager.view.LegacyActionContainer
        android:id="@+id/action_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topBar_height"
        android:background="?attr/topBarBackground"
        android:visibility="gone" />
</RelativeLayout>